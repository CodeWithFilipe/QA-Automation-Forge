{
  "name": "n2_samuel",
  "version": "1.0.0",
  "description": "Testing project with Mocha, Chai, Sinon, Chai-http, Playwright and Artillery",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/server.js",
    "start:mock": "node src/server.js",
    "test": "pnpm exec mocha test/**/*.test.js",
    "test:ui": "pnpm exec playwright test",
    "test:mocha": "pnpm exec mocha test/**/*.test.js",
    "test:performance": "pnpm exec artillery run load-tests/scenario.yml",
    "ci:ui": "concurrently \"pnpm start:mock\" \"pnpm start:ui\" \"pnpm test:ui\"",
    "start:ui": "pnpm exec http-server public -p 3002 -c-1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chai": "^4.3.10",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "chai-http": "^4.4.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "json-server": "^0.17.3",
    "@playwright/test": "^1.48.0",
    "artillery": "^2.0.0-28",
    "concurrently": "^8.0.1",
    "http-server": "^14.1.1"
  },
  "overrides": {
    "@playwright/test": "^1.48.0"
  },
  "license": "MIT"
}